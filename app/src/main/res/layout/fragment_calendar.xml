<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.shrikanthravi.collapsiblecalendarview.widget.CollapsibleCalendar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customCalendarView"
        app:selectedItem_textColor="#2196F3"
        app:todayItem_textColor="#4CAF50"
        app:todayItem_background="@drawable/circle_white_stroke_background"
        app:selectedItem_background="@drawable/circle_white_stroke_background"
        app:buttonLeft_drawableTintColor="@android:color/black"
        app:buttonRight_drawableTintColor="@android:color/black"
        app:expandIconColor="@android:color/black">
    </com.shrikanthravi.collapsiblecalendarview.widget.CollapsibleCalendar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/eventsListTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona una fecha para ver los eventos."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="8dp"/>
</LinearLayout>