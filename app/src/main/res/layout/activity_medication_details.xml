<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.medication.MedicationDetailsActivity">

    <!-- Toolbar -->
    <include
        android:id="@+id/toolbar_adult"
        layout="@layout/adult_toolbar" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvMedicationDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Datos del medicamento"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_adult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenido desplazable -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvMedicationDetails"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Medicamento -->
            <EditText
                android:id="@+id/etName"
                android:hint="Nombre"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etDose"
                android:hint="Dosis"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etNotes"
                android:hint="Notas"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Botones edición medicamento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnEditMedication"
                    android:text="Editar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnSaveMedication"
                    android:text="Guardar"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnCancelMedication"
                    android:text="Cancelar"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tvReminderDataLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos del recordatorio"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />
            <!-- Recordatorio -->
            <TextView
                android:id="@+id/tvReminderInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sin recordatorio"
                android:paddingBottom="8dp" />
            <LinearLayout
                android:id="@+id/reminderInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicio: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fin: " />

                <TextView
                    android:id="@+id/tvRecurring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recurrente: " />

                <TextView
                    android:id="@+id/tvFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frecuencia: " />

                <TextView
                    android:id="@+id/tvHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horas: " />

                <TextView
                    android:id="@+id/tvDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Días: " />

            </LinearLayout>


            <Button
                android:id="@+id/btnEditReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Recordatorio" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
