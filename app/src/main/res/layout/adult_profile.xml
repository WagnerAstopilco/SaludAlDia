<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_adult"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/holo_red_dark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:elevation="4dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16sp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/adult_profile_personal_data"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Editar"
                    android:src="@drawable/editar"
                    android:tint="@color/image_button_tint" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_names"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/edtNames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_names"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:enabled="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_lastnames"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/edtLastNames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_lastnames"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:enabled="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_email"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_email"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_phone"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_phone"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:enabled="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_age"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/edtAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_age"
                android:inputType="number"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:enabled="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_weight"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/edtWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_weight"
                android:inputType="number"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:enabled="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_emergency_contact"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/edtContactEmergency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_emergency_contact"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:enabled="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_allergies"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/edtAllergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_allergies"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:enabled="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="48dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adult_profile_button_save"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adult_profile_button_cancel"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_qr_code"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/qrImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:background="@android:color/white"
                android:contentDescription="CÃ³digo QR del perfil"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnTreatments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_button_treatments" />

            <Button
                android:id="@+id/btnHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adult_profile_button_history" />

        </LinearLayout>

    </ScrollView>
    </LinearLayout>
