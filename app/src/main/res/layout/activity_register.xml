<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivMainImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/main_image"
            android:src="@drawable/brand" />
        <TextView
            android:id="@+id/txtSigninLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="@string/register_activity_title"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/txtNamesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold|italic"
            android:text="@string/register_activity_names"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/edtNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_activity_names_hint"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtEmailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold|italic"
            android:text="@string/register_activity_email"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_activity_email_hint"
            android:inputType="textEmailAddress"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/txtPassLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold|italic"
            android:text="@string/register_activity_password"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_activity_password_hint"
            android:inputType="textPassword"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/txtPassConfirmLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold|italic"
            android:text="@string/register_activity_password_confirm"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_activity_password_confirm_hint"
            android:inputType="textPassword"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_activity_select_role"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <RadioGroup
            android:id="@+id/roleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <RadioButton
                android:id="@+id/radioAdulto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_activity_role_older_adult"/>

            <RadioButton
                android:id="@+id/radioCuidador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_activity_role_caregiver"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/register_activity_button_signin"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnBackToLogin"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/register_activity_button_return"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</ScrollView>